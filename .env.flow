# Flow Network Configuration for BookVerse
# Copy this to .env.local and update with your values

# Flow Network (testnet or mainnet)
VITE_FLOW_NETWORK=testnet

# Contract addresses (will be filled after deployment)
VITE_BOOKVERSE_CONTRACT_ADDRESS=0x0000000000000000
VITE_NONFUNGIBLETOKEN_ADDRESS=0x631e88ae7f1d7c20
VITE_METADATAVIEWS_ADDRESS=0x631e88ae7f1d7c20
VITE_VIEWRESOLVER_ADDRESS=0x631e88ae7f1d7c20

# Flow endpoints
VITE_FLOW_ACCESS_NODE=https://rest-testnet.onflow.org
VITE_FLOW_DISCOVERY=https://fcl-discovery.onflow.org/testnet/authn

# Admin/Minter account (for NFT minting - keep secure!)
FLOW_ADMIN_PRIVATE_KEY=
FLOW_ADMIN_ADDRESS=

# Partner store locations for redemption
VITE_PARTNER_LOCATIONS=Barnes & Noble,Local Independent Bookstores,Online Bookstores,Any Partner Store

# Feature flags
VITE_ENABLE_NFT_MINTING=true
VITE_ENABLE_PHYGITAL_REDEMPTION=true
VITE_ENABLE_ACHIEVEMENT_TRACKING=true